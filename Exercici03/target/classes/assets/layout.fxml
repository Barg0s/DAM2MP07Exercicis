<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.project.Controller">

    <!-- Chat Area -->
    <VBox layoutX="20" layoutY="20" prefHeight="500" prefWidth="550" spacing="10" style="-fx-background-radius: 10px;" AnchorPane.leftAnchor="20" AnchorPane.topAnchor="20">
        <children>
            <ScrollPane fx:id="scrollPane" hbarPolicy="NEVER" prefHeight="465.0" prefWidth="550" style="-fx-border-radius: 10px; -fx-border-color: black; -fx-background-color: white; -fx-background-radius: 10px;">
                <content>
                    <VBox fx:id="chatVBox" prefWidth="540" spacing="5" style=": ;" />
                </content>
            </ScrollPane>
      
          <!-- Controls -->
          <HBox prefHeight="40" spacing="10">
              <children>
                  <Button fx:id="buttonPicture" mnemonicParsing="false" onAction="#callPicture" prefWidth="80" />
                  <Button fx:id="buttonBreak" mnemonicParsing="false" onAction="#callBreak" prefWidth="80" />
                  <TextField fx:id="text" prefHeight="25.0" prefWidth="300.0" promptText="introdueix la teva prompt" />
                  <Button fx:id="buttonCallStream" mnemonicParsing="false" onAction="#escollirModel" prefWidth="80" />
                  <Button fx:id="netejarButton" mnemonicParsing="false" onAction="#clear" prefWidth="80" text="Clear" />
              </children>
          </HBox>
        </children>
      <padding>
         <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
      </padding>
    </VBox>

    <!-- Image Preview -->
    <VBox layoutX="600" layoutY="20" prefWidth="160" spacing="10" AnchorPane.rightAnchor="20" AnchorPane.topAnchor="20">
        <children>
            <Label prefHeight="17.0" prefWidth="167.0" style="-fx-font-weight:bold;" text="IMATGE A ENVIAR" />
            <ImageView fx:id="imgPreview" fitHeight="220.0" fitWidth="160.0" pickOnBounds="true" preserveRatio="true" />
        </children>
    </VBox>

</AnchorPane>
